<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DesktopAplicationCV.Views.Agregar_Banco"
             Title="Agregar Nuevo Banco">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Text="Codigo"
                   FontSize="Small"
                   Grid.Row="0" Grid.Column="1"/>
            <Editor WidthRequest="150"
                    Text="{Binding CodigoBancoIngresado}"
                    Placeholder="Codigo"
                    Grid.Row="0" Grid.Column="2"/>
            <Label Text="Nombre"
                   FontSize="Small"
                   Grid.Row="1" Grid.Column="1"/>
            <Editor WidthRequest="150"
                    Text="{Binding NombreBancoIngresado}"
                    Placeholder="Nombre"
                    Grid.Row="1" Grid.Column="2"/>
            <Button Text="Ingresar"
                    TextColor="White"
                    WidthRequest="200"
                    FontAttributes="Bold"
                    BackgroundColor="ForestGreen"
                    Grid.Row="3" Grid.Column="1"
                    Grid.ColumnSpan="1"
                    Command="{Binding InsertarBancoCommand}"/>
            <Button 
                Text="Cancelar"
                TextColor="White"
                WidthRequest="200"
                FontAttributes="Bold"
                BackgroundColor="ForestGreen"
                Grid.Row="5" Grid.Column="2"
                Grid.ColumnSpan="1"
                Command="{Binding CancelarCommand}"/>
        </Grid>
    </ScrollView>
</ContentPage>