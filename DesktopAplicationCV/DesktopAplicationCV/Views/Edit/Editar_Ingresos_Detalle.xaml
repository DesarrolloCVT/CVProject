<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DesktopAplicationCV.Views.Edit.Editar_Ingresos_Detalle"
             Title="Modificar Ingresos Detalle">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Text="Folio Factura de Venta"
                   FontSize="Small"
                   Grid.Row="0" Grid.Column="1"/>
            <Editor Placeholder="Folio Factura de Venta"
                    Grid.Row="0" Grid.Column="2"/>
            <Label Text="Monto"
                   FontSize="Small"
                   Grid.Row="1" Grid.Column="1"/>
            <Editor Placeholder="Monto"
                    Grid.Row="1" Grid.Column="2"/>
            <Button Text="Ingresar"
                    TextColor="White"
                    FontAttributes="Bold"
                    BackgroundColor="ForestGreen"
                    Grid.Row="3" Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Clicked="EditIncomeDetailButton_Clicked"/>
        </Grid>
    </ScrollView>
</ContentPage>