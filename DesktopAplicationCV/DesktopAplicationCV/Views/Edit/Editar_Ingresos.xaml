<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DesktopAplicationCV.Views.Editar_Ingresos">

    <ScrollView Margin="0,100,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Text="Editar Ingresos"
                   Margin="20,0,0,0"
                   FontSize="Medium"
                   TextColor="Silver"
                   FontAttributes="Bold, Italic"
                   Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="1"/>

            <Label Text="Folio"
                   FontSize="Small"
                   Grid.Row="1" Grid.Column="1"/>
            <Editor Placeholder="Folio"
                    Text="{Binding EditFolioIngresos}"
                    x:Name="EditFolio"
                    Grid.Row="1" Grid.Column="2"/>
            <Label Text="Tipo"
                   FontSize="Small"
                   Grid.Row="2" Grid.Column="1"/>
            <Editor Placeholder="Tipo"
                    Text="{Binding EditTipoIngresos}"
                    x:Name="EditTipo"
                    Grid.Row="2" Grid.Column="2"/>
            <Label Text="Moneda"
                   FontSize="Small"
                   Grid.Row="3" Grid.Column="1"/>
            <Editor Placeholder="Moneda"
                    Text="{Binding EditMonedaIngresos}"
                    x:Name="EditMoneda"
                    Grid.Row="3" Grid.Column="2"/>
            <Label Text="Fecha"
                   FontSize="Small"
                   Grid.Row="4" Grid.Column="1"/>
            <DatePicker Grid.Row="4" Grid.Column="2"
                        x:Name="PkrFecha"
                        Date="{Binding EditFechaIngresos}"
                        Format="yyyy-mm-dd"/>
            <Label Text="Cliente"
                   FontSize="Small"
                   Grid.Row="5" Grid.Column="1"/>
            <Editor Placeholder="Cliente"
                    Text="{Binding EditClienteIngresos}"
                    x:Name="EditCliente"
                    Grid.Row="5" Grid.Column="2"/>
            <Label Text="Metodo de Pago"
                   FontSize="Small"
                   Grid.Row="6" Grid.Column="1"/>
            <Editor Placeholder="Metodo de Pago"
                    Text="{Binding EditMetodoPagoIngresos}"
                    x:Name="EditMetodoPago"
                    Grid.Row="6" Grid.Column="2"/>
            <Label Text="Banco"
                   FontSize="Small"
                   Grid.Row="7" Grid.Column="1"/>
            <Editor Placeholder="Banco"
                    Text="{Binding EditBancoIngresos}"
                    x:Name="EditBanco"
                    Grid.Row="7" Grid.Column="2"/>
            <Label Text="Cuenta"
                   FontSize="Small"
                   Grid.Row="8" Grid.Column="1"/>
            <Editor Placeholder="Cuenta"
                    Text="{Binding EditCuentaIngresos}"
                    x:Name="EditCuenta"
                    Grid.Row="8" Grid.Column="2"/>
            <Button Text="Modificar"
                    TextColor="White"
                    WidthRequest="200"
                    FontAttributes="Bold"
                    BackgroundColor="ForestGreen"
                    Grid.Row="10" Grid.Column="1"
                    Grid.ColumnSpan="1"
                    Command="{Binding UpdateCommand}"/>
            <Button Text="Cancelar"
                    TextColor="White"
                    WidthRequest="200"
                    FontAttributes="Bold"
                    BackgroundColor="ForestGreen"
                    Grid.Row="10" Grid.Column="2"
                    Grid.ColumnSpan="1"
                    Command="{Binding CancelarCommand}"/>
        </Grid>
    </ScrollView>
</ContentPage>