<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DesktopAplicationCV.Views.Compra_Venta"
             xmlns:local="clr-namespace:DesktopAplicationCV.Views">
    <TabBar>
        <Tab Title="{Binding TxtFacturaVenta}">
            <ShellContent
                ContentTemplate="{DataTemplate local:Factura_Venta}" />
        </Tab>
        <Tab Title="{Binding TxtFacturaVentaDetalle}">
            <ShellContent
                ContentTemplate="{DataTemplate local:Factura_Venta_Detalle}" />
        </Tab>
        <Tab Title="{Binding TxtFacturaCompra}">
            <ShellContent
                ContentTemplate="{DataTemplate local:Factura_Compra}" />
        </Tab>
        <Tab Title="{Binding TxtFacturaCompraDetalle}">
            <ShellContent
                ContentTemplate="{DataTemplate local:Factura_Compra_detalle}" />
        </Tab>
    </TabBar>
</Shell>