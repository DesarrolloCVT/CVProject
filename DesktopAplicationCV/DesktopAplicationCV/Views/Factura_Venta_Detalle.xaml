<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModel="clr-namespace:DesktopAplicationCV.ViewModel"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="DesktopAplicationCV.Views.Factura_Venta_Detalle"
             BackgroundColor="DarkSlateGray"
             xmlns:recursos="clr-namespace:DesktopAplicationCV.Resources.Languages">
    
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- * Botones de accion * -->

            <Button Text="{x:Static recursos:AppResources.Agregar}"
                    FontAttributes="Bold"
                    BorderColor="White"
                    BorderWidth="1.5"
                    WidthRequest="150"
                    Grid.Column="0"
                    Grid.Row="0"
                    BackgroundColor="#0288D1"
                    CornerRadius="10"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="White"
                    Command="{Binding AgregarCommand}"/>

            <Button Text="{x:Static recursos:AppResources.Eliminar}"
                    FontAttributes="Bold"
                    BorderColor="White"
                    BorderWidth="1.5"
                    WidthRequest="150"
                    Grid.Column="1"
                    Grid.Row="0"
                    BackgroundColor="#0288D1"
                    CornerRadius="10"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="White"
                    Command="{Binding EliminarCommand}"/>

            <Button Text="{x:Static recursos:AppResources.Editar}"
                    FontAttributes="Bold"
                    BorderColor="White"
                    BorderWidth="1.5"
                    WidthRequest="150"
                    Grid.Column="2"
                    Grid.Row="0"
                    BackgroundColor="#0288D1"
                    CornerRadius="10"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="White"
                    Command="{Binding EditarCommand}"/>

            <!-- * Busqueda * -->

            <Editor x:Name="txtBusqueda"
                    Placeholder="{x:Static recursos:AppResources.PlaceHoldBuscar}"
                    PlaceholderColor="White"
                    HorizontalTextAlignment="Center"
                    WidthRequest="350"
                    Text="{Binding FilterText}"
                    AutoSize="Disabled"
                    Keyboard="Numeric"
                    Grid.Row="0"
                    Grid.Column="3"
                    Grid.ColumnSpan="3"
                    HeightRequest="10"/>

            <syncfusion:SfDataGrid x:Name="dataGrid"
                                   SelectionMode="Single"
                                   SelectedIndex="{Binding SelectedIndex,Mode=TwoWay}"
                                   NavigationMode="Row"
                                   AutoGenerateColumnsMode="None"
                                   ItemsSource="{Binding FacturaVentaDetalleInfoCollection}"
                                   DefaultColumnWidth="130"
                                   GridLinesVisibility="Both"
                                   HeaderGridLinesVisibility="Both"
                                   BackgroundColor="DarkSlateGray"
                                   Grid.Row="1"
                                   Grid.ColumnSpan="6"
                                   ColumnWidthMode="Fill"
                                   CellTappedCommand="{Binding CeldaTocadaCommand}">

                <syncfusion:SfDataGrid.Behaviors>
                    <toolkit:EventToCommandBehavior EventName="Loaded"
                                Command="{Binding GridCargadoCommand}" />
                </syncfusion:SfDataGrid.Behaviors>

                <syncfusion:SfDataGrid.Resources>
                    <Style TargetType="Label" x:Key="CustomTextStyle">
                        <Setter Property="TextColor" Value="White"/>
                    </Style>

                    <Style TargetType="syncfusion:DataGridHeaderCell" x:Key="HeaderStyle">
                        <Setter Property="TextColor" Value="White"/>
                        <Setter Property="FontAttributes" Value="Bold"/>
                    </Style>
                </syncfusion:SfDataGrid.Resources>

                <syncfusion:SfDataGrid.Columns>
                    <syncfusion:DataGridTextColumn MappingName="Folio" HeaderText="Folio" HeaderStyle="{StaticResource HeaderStyle}" CellStyle="{StaticResource CustomTextStyle}"></syncfusion:DataGridTextColumn>
                    <syncfusion:DataGridTextColumn MappingName="Codigo_Producto" HeaderText="Codigo de Producto" HeaderStyle="{StaticResource HeaderStyle}" CellStyle="{StaticResource CustomTextStyle}"></syncfusion:DataGridTextColumn>
                    <syncfusion:DataGridTextColumn MappingName="Cantidad" HeaderText="Cantidad" HeaderStyle="{StaticResource HeaderStyle}" CellStyle="{StaticResource CustomTextStyle}"></syncfusion:DataGridTextColumn>
                    <syncfusion:DataGridTextColumn MappingName="Precio" HeaderText="Precio" HeaderStyle="{StaticResource HeaderStyle}" CellStyle="{StaticResource CustomTextStyle}"></syncfusion:DataGridTextColumn>
                </syncfusion:SfDataGrid.Columns>
            </syncfusion:SfDataGrid>
        </Grid>
    </ScrollView>
</ContentPage>