<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DesktopAplicationCV.ViewModel"
             x:Class="DesktopAplicationCV.Views.UsuariosPage"
             Title="UsuariosPage">

    <CollectionView ItemsSource="{Binding Usuario}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <Label Text="{Binding IdUsuario}" />
                    <Label Text="{Binding NombreUsuario}" />
                    <Label Text="{Binding ClaveEncriptada}" />
                    <Label Text="{Binding Clave}" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>